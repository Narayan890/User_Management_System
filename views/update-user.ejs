<!--Include header-->
<%-include("include/_header")%>

    <!--Main-->
    <main id="main1">
        <div class="container">
            <!--All User Button starts here-->
            <div class="box">
                <a href="/" class="add-user">
                    <span class="text-gradient"><i class="fas fa-angle-double-left"></i>All Users</span>
                </a>
            </div>
            <!--All User Button ends here-->
            <!--Form Handling starts here-->
            <div class="text-center">
                <h2>Update User</h2>
            </div>
            <form action="/api/users" method="POST" id="update-user">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="hidden" name="id" value="<%= user._id%>">
                    <input type="text" name="name" value="<%= user.name%>" class="form-control" placeholder="Enter Name">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" value="<%= user.email%>" class="form-control" placeholder="Enter Email">
                </div>
                <div class="form-group form-radio">
                    <label class="form-radio-label" for="gender">Gender</label>
                    <div class="radio-inline">
                        <input type="radio" name="gender" value="Male" <%=user.gender=='Male' ? 'checked': '' %>>
                        <label for="gender">Male</label>
                    </div>
                    <div class="radio-inline">
                        <input type="radio" name="gender" value="Female " <%=user.gender=='Female' ? 'checked': '' %>>
                        <label for="gender ">Female</label>
                    </div>
                </div>

                <div class="form-group form-radio">
                    <label class="form-radio-label" for="status">Status</label>
                    <div class="radio-inline">
                        <input type="radio" name="status" value="Active" <%=user.status=='Active' ? 'checked': '' %>>
                        <label for="status">Active</label>
                    </div>
                    <div class="radio-inline">
                        <input type="radio" name="status" value="InActive" <%=user.status=='InActive' ? 'checked': '' %>>
                        <label for="status">InActive</label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit " class="btn btn-primary ">Submit</button>
                </div>
            </form>

            <!--Form Handling ends here-->

        </div>
    </main>
    <!--Main-->
    <!--Include footer-->
    <%-include("include/_footer")%>